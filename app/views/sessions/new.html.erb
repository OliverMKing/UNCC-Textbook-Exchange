<div class="container">
  <div class='row shadow bg-white justify-content-center p-3 m-4'>
    
    <!-- title text -->
    <div class='row justify-content-center w-100'>
      <% provide(:title, "Log in") %>
      <h1 class="text-primary">Log in</h1>
    </div>
    
    <div class="row w-50 justify-content-center pt-4">
      <div class="w-100">
        <%= form_for(:session, url: login_path) do |f| %>

          <%= f.label :email %>
          <%= f.email_field :email, class: 'form-control' %>

          <%= f.label :password, class: 'pt-2' %>
          <%= f.password_field :password, class: 'form-control' %>
      
          <%= f.label :remember_me, class: "checkbox inline" do %>
            <%= f.check_box :remember_me %>
            <span>Remember me on this computer</span>
          <% end %>

          <%= f.submit "Log in", class: "btn btn-primary btn-block" %>
          <p class='pt-1'>New user? <%= link_to "Sign up now!", signup_path %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>