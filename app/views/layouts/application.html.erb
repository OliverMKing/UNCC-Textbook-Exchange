<!DOCTYPE html>
<html>
  <head>
    <title>UnccTextbookExchange</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <%= link_to 'UNCC Textbook Exchange', '#', :class => 'navbar-brand' %>
      <button class='navbar-toggler' type='button' data-toggle='collapse' data-target='#navbarSupportedContent' aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class='navbar-toggler-icon'></span>
      </button>
      
      <div class='collapse navbar-collapse' id='navbarSupportedContent'>
        <ul class='navbar-nav mr-auto'>
          <li class='nav-item'><%= link_to "Home", root_path, :class => 'nav-link text-primary' %></li>
          <li class='nav-item'><%= link_to "Listings", listings_path, :class => 'nav-link text-primary' %></li>
          <% if logged_in? %>
            <li class='nav-item'><%= link_to "New Listing", new_listing_path, :class => 'nav-link text-primary' %></li>
            <li class='nav-item'><%= link_to "Edit Listings", '#', :class => 'nav-link text-primary' %></li>
            <li class="nav-item dropdown">
              <a href="#" class="nav-link dropdown-toggle text-primary" id='navbarDropdown' role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Account <b class="caret"></b></a>
              <div class="dropdown-menu" aria-labelledby='navbarDropdown'>
                <%= link_to "Profile", current_user, :class => 'dropdown-item text-primary' %>
                <%= link_to "Settings", '#', :class => 'dropdown-item text-primary' %>
                <div class="dropdown-divider"></div>
                <%= link_to "Log out", logout_path, method: :delete, :class => 'dropdown-item text-primary' %>
              </div>
            </li>
          <% else %>
            <li class='nav-item'><%= link_to "Log in", login_path, :class => 'nav-link text-primary' %></li>
          <% end %>
        </ul>
      </div>
    </nav>

    <%= yield %>
  </body>
</html>
