<div class="container">
  <div class="row justify-content-center bg-white shadow p-3 m-4">
    <div class="row justify-content-center w-100">
      <h1>Reports</h1>
    </div>
 
   <div class="table-responsive">
    <table class="table table-hover">
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Reason</th>
      </tr>
 
      <% @reports.each do |report| %>
        <tr>
          <td><%= report.name %></td>
          <td><%= report.email %></td>
          <td><%= report.reason %></td>
          <td><%= link_to 'Show', report_path(report) %></td>
          <td><%= link_to 'Delete', 
            report_path(report), 
            method: :delete, 
            data: { confirm: 'Are you sure?'}
            %>
          </td>
        </tr>
      <% end %>
    </table>
    <%= link_to 'Home', root_url %>
    </div>
  </div>
</div">
