<div class="row justify-content-center w-100">
  <h1 class="text-primary">Book Listings</h1>
</div>
    
<div class="col-3 p-0">
  <%= form_tag(listings_path method: :get) do %>
    <%= text_field_tag :search, params[:store], :placeholder => "Search Listings", :class => "form-control mb-2" %>
    <%= submit_tag 'Search', :class => 'btn btn-primary', name: nil %>
  <% end %>
  <% if logged_in? %>
    <%= button_to 'New', new_listing_url, :class => 'btn btn-outline-primary btn-block mb-2', :method => :get %>
  <% end %>
</div>
    
<div class="col">
  <div class="row w-100 m-0">
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover table-condensed">
        <tr>
          <th>Title</th>
          <th>ISBN</th>
          <th>Condition</th>
          <th></th>
        </tr>
 
        <%= render @listings %>
      </table>
    </div>
  </div>
</div>
