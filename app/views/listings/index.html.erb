<div class="row justify-content-center w-100">
  <h1 class="text-primary">Book Listings</h1>
</div>
    
<div class="row justify-content-end w-100 m-2">
  <%= text_field :search, nil, :placeholder => "Search Listings", :class => "form-control" %>
</div>
    
<div class="col-2">
  <%= button_to 'Home', root_path, :class => 'btn btn-outline-primary btn-block mb-2', :method => :get %>
  <%= button_to 'New Listing', new_listing_url, :class => 'btn btn-outline-primary btn-block mb-2', :method => :get %>
  <%= button_to 'Edit Listings', root_path, :class => 'btn btn-outline-primary btn-block', :method => :get %>
</div>
    
<div class="col">
  <div class="row w-100 m-0">
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover table-condensed">
        <tr>
          <th>Name</th>
          <th>ISBN</th>
          <th>Condition</th>
          <th></th>
        </tr>
 
        <%= render @listings %>
      </table>
    </div>
  </div>
</div>
