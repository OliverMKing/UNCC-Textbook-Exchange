<div class="container">
  <div class="row shadow justify-content-center p-3 m-4">
    <div class="row justify-content-center w-100">
      <h1 class="text-primary">Book Listings</h1>
    </div>
    
    <div class="row justify-content-end w-100">
      <%= text_field :search, :class => "form_control m-2", :value => 'Search Listings' %>
    </div>
    
    <div class="col">
      <div class="row w-100">
        <%= button_to 'New Listing', new_listing_path, :class => 'btn btn-outline-primary btn-block' %>
      </div>
    </div>
    
    <div class="col">
      <div class="row justify-content-center w-100">
        <table class="table table-striped table-bordered table-hover table-condensed">
          <tr>
            <th>Name</th>
            <th>ISBN</th>
            <th>Email</th>
            <th>Condition</th>
          </tr>
 
        <% @listings.each do |listing| %>
          <tr>
            <td><%= listing.name %></td>
            <td><%= listing.isbn %></td>
            <td><%= listing.email %></td>
            <td><%= listing.condition %></td>
            <td><%= link_to 'Show', listing_path(listing) %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>