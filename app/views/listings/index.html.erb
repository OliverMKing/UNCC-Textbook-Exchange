<h1>Listing Books</h1>
 
<table>
  <tr>
    <th>Name&nbsp;</th>
    <th>ISBN&nbsp;</th>
    <th>Email&nbsp;</th>
    <th>Condition&nbsp;</th>
    <th>Link&nbsp;</th>
  </tr>
 
  <% @listings.each do |listing| %>
    <tr>
      <td><%= listing.name %>&nbsp;</td>
      <td><%= listing.isbn %>&nbsp;</td>
      <td><%= listing.email %>&nbsp;</td>
      <td><%= listing.condition %>&nbsp;</td>
      <td><%= link_to 'Show', listing_path(listing) %>&nbsp;</td>
      <td><%= link_to 'Delete', 
        listing_path(listing), 
        method: :delete, 
        data: { confirm: 'Are you sure?'}
        %>
        </td>
    </tr>
  <% end %>
</table>
<%= link_to 'Home', root_url %>