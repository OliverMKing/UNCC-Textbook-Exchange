<div class="row justify-content-center w-100">
  <h1 class="text-primary">Book Listings</h1>
</div>
    
<div class="d-flex flex-row">
  <%= text_field :search, nil, :placeholder => "Search Listings", :class => "form-control mb-2" %>
  <% if logged_in? %>
    <%= button_to 'New', new_listing_url, :class => 'btn btn-outline-primary btn-block mb-2', :method => :get %>
  <% end %>
</div>
    
<div class="col">
  <div class="row w-100 m-0">
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover table-condensed">
        <tr>
          <th>Name</th>
          <th>ISBN</th>
          <th>Condition</th>
          <th></th>
        </tr>
 
        <%= render @listings %>
      </table>
    </div>
  </div>
</div>
