<div class="row justify-content-center w-100">
    <% provide(:title, @listing.title) %>
   <h1 class='text-primary'>
       <%= @listing.title %>
   </h1>
</div>

<div class="row justify-content-center w-100">
    <div class="justify-content-center w-50">
        <% if not @listing.isbn.blank? %>
            <div class="m-2">
                <h4>ISBN</h4>
                <%= @listing.isbn %>
            </div>
        <% end %>
    
        <div class="m-2">
            <h4>Condition</h4>
            <%= @listing.condition %>
        </div>
        
        <% if logged_in? %>
            <div class="m-2">
                <h4>Contact Email</h4>
                <%= mail_to @listing.email, @listing.email, :subject => @listing.title %>
            </div>
        <% end %>
        
        <% if not @listing.comments.blank? %>
            <div class="m-2">
                <h4>Comments</h4>
                <%= @listing.comments %>
            </div>
        <% end %>

        <div class="row justify-content-center m-2">
          <div class="col">
            <%= button_to 'Back', root_path, method: :get, :class => 'btn btn-outline-primary btn-block' %>
          </div>
        </div>
    </div>
</div>
